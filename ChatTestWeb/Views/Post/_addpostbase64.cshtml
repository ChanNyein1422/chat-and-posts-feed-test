@model Data.Models.tbPost

<!-- Modal -->

<div class="modal-header">
    <h5 class="modal-title" id="addPostModalLabelBase64">Add New Post (using base 64)</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<form id="addFormBase64">
    <input type="hidden" name="ID" value="@Model.Id" />
    <input type="hidden" name="userId" value="@Model.userId" />
    <input type="hidden" name="postPhoto" value="@Model.postPhoto" id="postPhoto" />
    <div class="modal-body">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Insert ur post..." name="PostContent" value="@Model.postContent" aria-label="PostContent" aria-describedby="basic-addon1">
        </div>
        <p>! Inserted Image will be compressed to 50% of its size ! </p>
        <div class="input-group mb-3">
            <input type="file" class="form-control" id="upload" value="@Model.postPhoto" aria-label="PostPhoto" aria-describedby="basic-addon1"><br />
        </div>
        <canvas id="canvas" class="align-items-center justify-content-center" style="max-width: 400px;"></canvas>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>


